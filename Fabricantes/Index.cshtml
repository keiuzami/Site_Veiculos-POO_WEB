@using WebMatrix.Data
@{
    Page.Title = "O título é inserido aqui";
    Layout = "~/_Layout.cshtml";

    var db = Database.Open("dbSiteVeiculos");

    var fabricantes = db.Query("select * from Fabricante");

    db.Close();
}

<div>
    <h2>Fabricantes</h2>

    <a href="~/Fabricantes/Cadastrar.cshtml" class="btn btn-primary">Cadastrar Novo</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th style="width: 140px">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in fabricantes)
            {
                <tr>
                    <td>@f.Nome</td>
                    <td>
                        <a href="~/Fabricantes/Atualizar?fabricante_id=@f.Id" class="btn btn-info btn-xs">Atualizar</a>
                        <a href="~/Fabricantes/Excluir?fabricante_id=@f.Id" class="btn btn-danger btn-xs">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>